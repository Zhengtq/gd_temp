<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/info_item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/info_parternerLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:src="@drawable/empty_photo" />

        <TextView
            android:id="@+id/infoText"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </TextView>
    </LinearLayout>

    <RelativeLayout 
        android:id="@+id/info_item_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/info_item_linear_layout"
        android:layout_marginRight="-65dp">
        <ImageButton 
            android:id="@+id/info_item_delete_button"
            android:layout_width="62dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/info_item_delete"
            android:background="#FF0030"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:contentDescription="删除"/>
    </RelativeLayout>
</RelativeLayout>